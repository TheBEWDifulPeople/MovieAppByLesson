<%= form_for @movie, html: {class: 'form-horizontal'} do |f| %>
  <div class="control-group <%= "error" if @movie.errors[:title].any? %>">
    <%= f.label :title, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :title %>
      <%= errors_for(@movie.errors[:title]) %>
    </div>
  </div>
  <div class="control-group <%= "error" if @movie.errors[:description].any? %>">
    <%= f.label :description, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description %>
      <%= errors_for(@movie.errors[:description]) %>
    </div>
  </div>
  <div class="control-group <%= "error" if @movie.errors[:year_released].any? %>">
    <%= f.label :year_released, class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :year_released, min: 1886, max: Date.today.year %>
      <%= errors_for(@movie.errors[:year_released]) %>
    </div>
  </div>
  <div class="control-group <%= "error" if @movie.errors[:rating].any? %>">
    <%= f.label :rating, class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :rating, min: 1, max: 5 %>
      <%= errors_for(@movie.errors[:rating]) %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit class: 'btn' %>
    </div>
  </div>
<% end %>
